[Unit]
Description=Avantra Master service

[Service]
User={{ avantra_server_user }}
Group={{ avantra_server_user }}
WorkingDirectory={{ avantra_server_install_base_dir }}
ExecStart=java -Dxandria.home={{ avantra_server_install_base_dir }}/master/.. -jar {{ avantra_server_install_base_dir }}/master/lib/xandria_master.jar
TimeoutStartSec=60
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
